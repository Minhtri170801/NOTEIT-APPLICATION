<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.noteit">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Demo">
        <receiver android:name=".util.MyReceiver"
            android:exported="false"/>
        <activity
            android:name=".activites.SignUpActivity"/>
        <activity
            android:name=".activites.LabelAcitvity"/>
        <activity
            android:name=".activites.EditActivity"/>
        <activity
            android:name=".activites.GarbageActivity"/>
        <activity
            android:name=".activites.SettingActivity"/>
        <activity
            android:name=".activites.ConfirmOTPActivity"/>
        <activity
            android:name=".activites.ForgotActivity"/>
        <activity
            android:name=".activites.DetailActivity"/>
        <activity
            android:name=".activites.FormatFontActivity"/>
        <activity
            android:name=".activites.RecoveryPassword"/>
        <activity
            android:name=".activites.LoginActivity"/>
        <activity
            android:name=".activites.AddNoteActivity"/>
        <activity
            android:name="com.example.noteit.activites.HomeActivity"
            android:label="NoteIt"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>